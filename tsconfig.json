{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/pages/*": ["./pages/*"],
      "@/styles/*": ["./styles/*"],
      "@/components/*": ["./components/*"],
      "@/types/*": ["./types/*"],
      "@/routes/*": ["./routes/*"],
      "@/layouts/*": ["./layouts/*"],
      "@/dummy/*": ["./dummy/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next-sitemap.config.js"],
  "exclude": ["node_modules"]
}
